generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// O enum UserRole foi movido para src/common/enums/user-role.enum.ts
enum Role {
  ADMIN
  TEACHER
  COORDINATOR
  STUDENT
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  role      Role @default(STUDENT)
  status    Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String
  author    String?
  category  String?
  available Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
}

model Loan {
  id         Int      @id @default(autoincrement())
  bookId     Int
  borrowerId Int
  borrowedAt DateTime @default(now())
  dueAt      DateTime?
  returnedAt DateTime?

  book     Book @relation(fields: [bookId], references: [id])
  borrower User @relation(fields: [borrowerId], references: [id])

  @@index([bookId])
  @@index([borrowerId])
}
